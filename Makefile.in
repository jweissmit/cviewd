# $Id: Makefile.in,v 1.3 1999-10-19 20:23:11 danw Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
sbindir=@sbindir@
mandir=@mandir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@ ${WARN_CFLAGS} ${ERROR_CFLAGS}
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS} ${DEFS}

all: cviewd

cviewd: cviewd.o
	${CC} ${LDFLAGS} -o cviewd cviewd.o ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${sbindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man8
	${INSTALL_PROGRAM} cviewd ${DESTDIR}${sbindir}
	${INSTALL} -m 444 ${srcdir}/cviewd.8 ${DESTDIR}${mandir}/man8

clean:
	rm -f cviewd.o cviewd

distclean: clean
	rm -f config.cache config.log config.status Makefile
